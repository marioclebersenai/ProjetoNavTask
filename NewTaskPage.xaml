<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoNavTask.NewTaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#191A4B"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="InputFrame" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="HasShadow" Value="False" />
            <Setter Property="BorderColor" Value="Transparent" />
        </Style>

        <Style x:Key="SegmentedButton" TargetType="Button">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="HeightRequest" Value="45" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <Style
            x:Key="SegmentedButtonSelected"
            BasedOn="{StaticResource SegmentedButton}"
            TargetType="Button">
            <Setter Property="BackgroundColor" Value="#5D5FEF" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
        <Style
            x:Key="SegmentedButtonUnselected"
            BasedOn="{StaticResource SegmentedButton}"
            TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#A9A9A9" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="25" RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="20">

                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="New Task"
                    TextColor="White" />
                <BoxView
                    Margin="0,-10,0,10"
                    HeightRequest="1"
                    Opacity="0.5"
                    Color="White" />

                <Label Text="Task title" TextColor="#FFF" />
                <Border
                    Padding="10,0"
                    BackgroundColor="#FFF"
                    HeightRequest="48"
                    StrokeShape="RoundRectangle 12">
                    <Entry
                        HeightRequest="83"
                        Placeholder="Add Task Name..."
                        PlaceholderColor="Gray"
                        TextColor="Black" />
                </Border>

                <Label Text="Description" TextColor="#FFF" />
                <Border
                    Padding="10,0"
                    BackgroundColor="#FFF"
                    HeightRequest="85"
                    StrokeShape="RoundRectangle 12">
                    <Editor
                        AutoSize="Disabled"
                        HeightRequest="80"
                        Placeholder="Add description..."
                        PlaceholderColor="Gray"
                        TextColor="Black" />
                </Border>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Label
                        Text="Not Importance"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <CheckBox IsChecked="True" Color="#C3D2FF" />
                    <Label
                        Text="Importance"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <CheckBox IsChecked="False" Color="#C3D2FF" />
                </HorizontalStackLayout>

                <Grid
                    ColumnDefinitions="*,*"
                    ColumnSpacing="15"
                    VerticalOptions="Center">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Date" TextColor="#FFF" />
                        <Border
                            Padding="10,0"
                            BackgroundColor="#FFF"
                            HeightRequest="45"
                            StrokeShape="RoundRectangle 12">
                            <HorizontalStackLayout
                                HeightRequest="60"
                                Spacing="8"
                                VerticalOptions="Center">
                                <Image HeightRequest="20" Source="calendar.png" />
                                <DatePicker
                                    Format="dd/MM/yy"
                                    HeightRequest="60"
                                    TextColor="Black"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Time" TextColor="#FFF" />
                        <Border
                            Padding="10,0"
                            BackgroundColor="#FFF"
                            HeightRequest="45"
                            StrokeShape="RoundRectangle 12">
                            <HorizontalStackLayout
                                HeightRequest="60"
                                Spacing="8"
                                VerticalOptions="Center">
                                <Image HeightRequest="20" Source="calendar.png" />
                                <DatePicker
                                    Format="dd/MM/yy"
                                    HeightRequest="60"
                                    TextColor="Black"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </Grid>

                <Label Style="{StaticResource FormLabel}" Text="Category" />
                <Border
                    BackgroundColor="#FFF"
                    HeightRequest="45"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 12">
                    <Grid ColumnDefinitions="*,*">
                        <Button
                            x:Name="PersonalButton"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            Text="Personal"
                            TextColor="#456ADD" />
                        <Button
                            x:Name="GroupButton"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            Text="Group"
                            TextColor="#BFBFBF" />
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <Grid
            Grid.Row="1"
            Padding="0,20,0,0"
            ColumnDefinitions="*,*"
            ColumnSpacing="15">
            <Button
                Grid.Column="0"
                BackgroundColor="Transparent"
                BorderColor="#456ADD"
                BorderWidth="1"
                CornerRadius="16"
                HeightRequest="50"
                Text="Cancel" />
            <Button
                Grid.Column="1"
                BackgroundColor="#5D5FEF"
                CornerRadius="16"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Create" />
        </Grid>
    </Grid>
</ContentPage>